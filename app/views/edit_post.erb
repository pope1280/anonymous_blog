<div class="container">
  <h1>Edit Post</h1>

  <form name='edit_post' action="/post/<%=@post.id%>/edit" method='post'>
    <input type='text' name='post[title]' value="<%=@post.title%>" required><br><br>
    <!-- <input type='text' name='tag' value="<%=@post.tags.each%>" ><br><br> -->
    <textarea name='post[body]' rows="10" cols="60" required><%=@post.body%></textarea><br><br>
    <input type='submit' value='Update Post!'>
  </form>
  <br>
  <form name'delete_post' action="/post/<%=@post.id%>/delete" method='get'>
    <input type='submit' value='Delete Post!'>
  </form>
  
</div>
